<table id="past-events-table" class="table table-striped table-bordered table-condensed responsive-table">
  <thead>

  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Venue</th>
    <th>City</th>
  </tr>
  </thead>
</table>

<script>
  window.whenReady(function () {
    $('#past-events-table').DataTable({
      paging: true,
      pageLength: 10,
      serverSide: true,
      searching: false,
      sort: false,
      ajax: '/events.json?type=past&serialization_format=dataTables',
      columns: [
        { data: 'title' },
        { data: 'date' },
        { data: 'location_name' },
        { data: 'location_city_and_state' }
      ],
      columnDefs: [{
        targets: 0,
        render: function ( data, type, row ) {
          if (row.url) {
            return "<a href='" + row.url + "'>" + row.title + "</a>";
          } else {
            return row.title;
          }
        }
      }]
    });
  });
</script>